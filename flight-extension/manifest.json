{
    "manifest_version": 3,
    "name": "Flight Alert Extension",
    "description": "Check for flight updates matching your bucket list.",
    "version": "1.0",
    "permissions": ["alarms", "notifications", "storage", "activeTab", "fetch"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  